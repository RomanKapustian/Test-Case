<section class='my-20'>
  <div class='flex flex-col items-center mx-auto mb-10 gap-x-5 px-4 md:max-w-md'>
    <div class='w-full mb-4 text-center text-h3-m md:text-h3-d'>
      {{ 'customer.activate_account.title' | t }}
    </div>
    <p>{{ 'customer.activate_account.subtitle' | t }}</p>
  </div>

  <div class='mx-auto px-4 my-0 md:max-w-md'>
    {%- form 'activate_customer_password',
      class: 'flex flex-col justify-between gap-y-4'
    -%}
      {%- if form.errors contains 'password' -%}
        <small
          id='password-error'
          class='flex items-center justify-center gap-x-1 text-error'
        >
          <span>
            {% render 'icon-error' %}
          </span>
          <span>
            {{ form.errors.translated_fields.password | capitalize }}
            {{ form.errors.messages.password }}
          </span>
        </small>
      {%- endif -%}
      {%- if form.errors contains 'password_confirmation' -%}
        <small
          id='password_confirmation-error'
          class='flex items-center justify-center gap-x-1 text-error'
        >
          <span class='inline-flex items-center m-0'>
            {% render 'icon-error' %}
          </span>
          <span>
            {{
              form.errors.translated_fields.password_confirmation
              | capitalize
            }}
            {{ form.errors.messages.password_confirmation }}
          </span>
        </small>
      {%- endif -%}
      {% assign input_label = 'customer.activate_account.password' | t %}
      <div
        class='w-full input-wrapper'
        {%- if form.errors -%}
          style='border-color: #d7403b'
        {% endif %}
      >
        <label
          for='password'
          class='input-label'
        >
          {{ input_label }}
        </label>
        <input
          type='password'
          name='customer[password]'
          id='password'
          class='input'
          autocomplete='new-password'
          {%- if form.errors contains 'password' -%}
            aria-invalid='true'
            aria-describedby='password-error'
          {%- endif -%}
        >
      </div>

      {% assign input_label = 'customer.activate_account.password_confirm'
        | t
      %}
      <div
        class='w-full input-wrapper'
        {%- if form.errors -%}
          style='border-color: #d7403b'
        {% endif %}
      >
        <label
          for='password_confirmation'
          class='input-label'
        >
          {{ input_label }}
        </label>
        <input
          type='password'
          name='customer[password_confirmation]'
          id='password_confirmation'
          class='input'
          autocomplete='new-password'
          {%- if form.errors contains 'password_confirmation' -%}
            aria-invalid='true'
            aria-describedby='password_confirmation-error'
          {%- endif -%}
        >
      </div>

      <div class='flex flex-col gap-y-4'>
        <button class='w-full button button--primary justify-center bg-black'>
          {{- 'customer.activate_account.submit' | t -}}
        </button>

        <a
          href='{{ routes.root_url }}'
          class='w-full button button--secondary justify-center'
        >
          {{- 'customer.activate_account.cancel' | t -}}
        </a>
      </div>
    {%- endform -%}
  </div>
</section>

{% schema %}
{
  "name": "Activate Account",
  "settings": []
}
{% endschema %}
